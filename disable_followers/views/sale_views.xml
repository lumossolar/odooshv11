<?xml version="1.0"?>
<odoo>
        <record id="view_sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm' and @states='sent']" position="attributes">
                    <attribute name = "invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm' and @states='draft']" position="attributes">
                    <attribute name = "invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="before">
                    <button name="action_confirm1" states="draft" string="Confirm Sale" class="o_sale_confirm" type="object" />
                </xpath>

                <xpath expr="//button[@name='action_cancel']" position="before">
                    <button name="action_confirm1" states="sent" string="Confirm Sale" class="btn-primary o_sale_confirm" type="object" />
                </xpath>
            </field>
        </record>

</odoo>
