<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchaseorder_alert_form" model="ir.ui.view">
        <field name="name">purchaseorder.alert.form</field>
        <field name="model">purchaseorder.alert</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Alert">
                <header>
<!--                    <button class="oe_stat_button" name="action_done" type="object" string="Done" states="draft"/>-->
<!--                    <button class="oe_stat_button" name="action_cancel" type="object" string="Cancel" states="draft"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,process,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" attrs="{'readonly':[('state','!=','draft')]}"/></h1>
                </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="purchase_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="reference" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="created_by" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="To be Purchase">
                        <field name="purchaseorder_alert_line" attrs="{'readonly':[('state','!=','draft')]}">
                            <tree string="Purchase Order Alert" editable="true">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                                <button name="action_done" type="object" icon="fa-refresh" class="oe_highlight" string="Process" attrs="{'invisible':[('status','=',True)]}"/>
                                <field name="status" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_purchaseorder_alert_tree" model="ir.ui.view">
        <field name="name">purchaseorder.alert.tree</field>
        <field name="model">purchaseorder.alert</field>
        <field name="arch" type="xml">
            <tree string="purchaseorder alert">
                <field name="name" select="1"/>
                <field name="reference"/>
                <field name="date"/>
                <field name="created_by"/>
                <field name="state"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>

    <record id="action_purchaseorder_alert" model="ir.actions.act_window">
            <field name="name">Purchase Order alert</field>
            <field name="res_model">purchaseorder.alert</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_purchaseorder_alert_tree"/>
        </record>
    <menuitem id="menu_purchaseorder_alert" name="Purchase Order Alert" parent="purchase.menu_procurement_management" action="action_purchaseorder_alert"/>
    </data>
</odoo>