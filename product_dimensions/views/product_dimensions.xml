<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_product_dimensions_form" model="ir.ui.view">
        <field name="name">product.dimensions.form</field>
        <field name="model">product.dimensions</field>
        <field name="arch" type="xml">
            <form string="Product Dimentions">
                <header>
                    <button class="oe_stat_button" name="action_done" type="object" string="Done" states="draft"/>
                    <button class="oe_stat_button" name="action_cancel" type="object" string="Cancel" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" placeholder="Reference...." attrs="{'readonly':[('state','!=','draft')]}"/></h1>
                </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="created_by" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Details">
                        <field name="product_dimensions_line" attrs="{'readonly':[('state','!=','draft')]}">
                            <tree string="Product Details" editable="true">
                                <field name="product_id"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="weight" />
                                <field name="volume"/>
                            </tree>
                        </field>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_dimensions_tree" model="ir.ui.view">
        <field name="name">product.dimensions.tree</field>
        <field name="model">product.dimensions</field>
        <field name="arch" type="xml">
            <tree string="Product Dimensions">
                <field name="name" select="1"/>
                <field name="date"/>
                <field name="created_by"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_product_dimensions" model="ir.actions.act_window">
            <field name="name">Product Dimensions</field>
            <field name="res_model">product.dimensions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_dimensions_tree"/>
        </record>
    <menuitem id="menu_product_dimensions" name="Product Dimensions Adjustment" parent="stock.menu_stock_inventory_control" action="action_product_dimensions"/>
    </data>
</openerp>