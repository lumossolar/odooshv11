<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <template id="assets_backend" name="nrda_dsc assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/stock_pivot/static/src/js/pivot.js"></script>
            </xpath>
        </template>

        <record id="view_forecast_all_pivot" model="ir.ui.view">
            <field name="name">total.stock.report.forecast.pivot</field>
            <field name="model">total.stock.report.forecast</field>
            <field name="arch" type="xml">
                <pivot string="Stock Level forecast"    >
                    <field name="product_id" type="row"/>
                    <field name="date"  interval="week" type="col"/>
                    <field name="quantity" type="measure" widget="char"/>
                </pivot>
            </field>
        </record>

        <record id="view_stock_forecast_all_search" model="ir.ui.view">
            <field name="name">total.stock.report.forecast.search</field>
            <field name="model">total.stock.report.forecast</field>
            <field name="arch" type="xml">
                <search string="Stock Level forecast">
                    <field name="product_id"/>
                    <field name="date"/>
                    <field name="product_tmpl_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Pivot" name="pivot_by" context="{'pivot_row_groupby': ['product_id'], 'pivot_column_groupby': ['date:week'],'pivot_measures': ['quantity']}"/>
                        <filter string="Graph" name="graph_by" context="{'graph_groupbys': ['date:week', 'product_id']}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_stock_forecast_all_graph" model="ir.ui.view">
            <field name="name">total.stock.report.forecast.graph</field>
            <field name="model">total.stock.report.forecast</field>
            <field name="arch" type="xml">
                <graph string="Stock Level forecast">
                    <field name="product_id"/>
                    <field name="date" type="measure"/>
                    <field name="quantity" type="row"/>
                </graph>
            </field>
        </record>

        <record id="viewstock_forecast__form" model="ir.ui.view">
            <field name="name">total.stock.report.form</field>
            <field name="model">total.stock.report.forecast</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <form string="Stock Level forecast">
                    <sheet>
                        <group name="main_grp_col1">
                            <field name="product_id"/>
                            <label for="quantity"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="viewstock_forecast_tree" model="ir.ui.view">
            <field name="name">total.stock.report.tree</field>
            <field name="model">total.stock.report.forecast</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Stock Level forecast">
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_forecast_all" model="ir.actions.act_window">
            <field name="name">Stock Level Forecast</field>
            <field name="res_model">total.stock.report.forecast</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,tree</field>
            <field name="search_view_id" ref="view_stock_forecast_all_search"/>
            <field name="view_id" ref="view_forecast_all_pivot"/>
        </record>

        <!--<menuitem id="menu_stock_total_forecast" parent="stock.menu_warehouse_report"  name="Pivot Stock Forecast" action="action_stock_forecast_all" />-->

        <!-- STOCK LEVEL FORECAST -->

        <record id="stock_forecast_report_pivot" model="ir.actions.server">
            <field name="name">Stock Forecast</field>
            <field name="model_id" ref="model_total_stock_report_forecast"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">action=model.do_open()</field>
        </record>

        <record id="act_stock_forecast_report_pivot" model="ir.values">
            <field name="model_id" ref="model_total_stock_report_forecast" />
            <field name="name">Stock Forecast</field>
            <field name="key2">client_action_multi</field>
            <field eval="'ir.actions.server,%d'%stock_forecast_report_pivot" name="value"/>
            <field name="key">action</field>
            <field name="model">total.stock.report.forecast</field>
        </record>

        <menuitem id="menu_stock_forecast_report" name="Stock Forecast Report" parent="stock.menu_warehouse_report" action="stock_forecast_report_pivot"/>

    </data>
</openerp>
